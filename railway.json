{
    "schemaVersion": 2,
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build"
    },
    "deploy": {
        "startCommand": "node dist/index.js",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 5,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}